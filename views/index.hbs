{{! index.hbs is replicated in views-user/view-product.hbs }}
<section>
  <div class="row">
    {{! @index - to get array index }}
    {{#each products}}
      <div class="col-md">
        <div class="card" style="width: 18rem;">
          <img
            src="/images/product-images/{{this._id}}.jpg"
            class="card-img-top w-75"
            alt="{{this.name}}"
          />
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <h5 class="card-title">&#x20b9; {{this.price}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">ADD TO CART</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>