<section id="user-login">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="display-6">Login</h1>
      <form
        class="w-50 mt-5"
        action="/user/login"
        method="POST"
        autocomplete="on"
      >
        <div class="mb-1">
          <label for="user-name" class="form-label">Email</label>
          <input type="text" name="email" class="form-control" id="user-name" />
        </div>
        <div class="mb-1">
          <label for="user-password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            id="user-password"
          />
        </div>
        <div class="mb-1">
          <a href="/user/signup">New customer? Start here.</a>
          <button
            type="submit"
            class="btn btn-primary mt-3 float-end"
          >Login</button>
        </div>

      </form>
      {{#if logError}}
        <p class="m-3 text-danger">{{logError}}</p>
      {{/if}}
    </div>
  </div>
</section>