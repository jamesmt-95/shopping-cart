<section id="admin-view-products">
  <div class="container">

    <div class="row">
      <div class="col">
        <a class="btn btn-primary float-end" href="/admin/add-product">Add
          Product</a>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Product Name</th>
              <th scope="col">Price</th>
              <th scope="col">Category</th>
              <th scope="col">Image</th>
              <th class="w-25" scope="col">Description</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
              <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.name}}</td>
                <td>&#x20b9; {{this.price}}</td>
                <td>{{this.category}}</td>
                <td><img
                    class="admin-viewImg"
                    src="/images/product-images/{{this._id}}.jpg"
                  /></td>
                {{! Here express.static(./public) so we don't need to mention that }}
                <td>{{this.description}}</td>
                <td><a
                    class="btn btn-primary"
                    href="/admin/edit-product/{{this._id}}"
                  >Edit</a></td>
                <td><a
                    class="btn btn-danger"
                    onclick="return confirm('Are you want to delete {{this.name}}?')"
                    href="/admin/delete-product/{{this._id}}"
                  >Delete</a></td>
                  {{!-- return is required along with confirm() --}}
 
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>